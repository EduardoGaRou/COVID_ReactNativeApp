<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8fa80">

    <TextView
        android:id="@+id/calendar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="World Calendar"
        android:textSize="50sp"
        android:textColor="#003d99"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <CalendarView
        android:id="@+id/virus_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_title"/>

    <TextView
        android:id="@+id/calendar_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stay updated with today's stats"
        android:textSize="30sp"
        android:textColor="#003d00"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="42dp"
        app:layout_constraintTop_toBottomOf="@id/virus_calendar"/>

</androidx.constraintlayout.widget.ConstraintLayout>